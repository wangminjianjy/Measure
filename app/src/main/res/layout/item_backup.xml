<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/view_height_5">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="@dimen/view_height_10">

        <TextView
            android:id="@+id/tv_backup_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/view_height_5"
            android:textColor="@color/colorTextBlack"
            android:textSize="@dimen/text_size_17" />

        <TextView
            android:id="@+id/tv_backup_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/view_height_10"
            android:textColor="@color/colorTextBlack"
            android:textSize="@dimen/text_size_15" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_backup_state"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/view_height_10"
        android:gravity="center"
        android:padding="@dimen/view_height_5"
        android:textColor="@color/colorTextBlack"
        android:textSize="@dimen/text_size_17" />
</LinearLayout>